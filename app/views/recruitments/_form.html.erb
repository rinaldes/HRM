<div class="container-fluid">
	<ul class="breadcrumb">
        <li><p>YOU ARE HERE</p></li> 
        <li><a href="/recruitments" class="">Recruitment</a></li>
        <li><a href="#" class="active">New Recruitment</a></li>
    </ul>
    
    <div class="page-title">	
    	<i class="fa fa-puzzle-piece"></i>
    	<h3>New <span class="semi-bold">Recruitment</span></h3>	
    </div>
    <%= form_for recruitment do |f|%> 
    	<div class="grid simple">
       	  <div class="grid-title no-border"></div>
        	<div class="grid-body no-border">
                    <div class="form-group row">
                        <label class="form-label col-sm-2">No Recruitment</label>
                        <div class="controls col-sm-2">	
                            <%= f.hidden_field :no_recruitment , value: @code %>					 
                            <strong><%= @code %></strong>				                       
                        </div>
                     </div>
                     <div class="form-group row">
                        <label class="form-label col-sm-2">Requester</label>
                        <div class="controls col-sm-5">						
                            <%= f.text_field :requester, :placeholder => "Requester Name" %>                       
                        </div>
                     </div>
                     <div class="form-group row">
                        <label class="form-label col-sm-2">Organization</label>
                        <div class="controls col-sm-5">						 
                            <%= f.select :organization_id, options_for_select(organizations), {:prompt => '--select--'} %>
                        </div>
                     </div>
                     <div class="form-group row">
                        <label class="form-label col-sm-2">Due Date</label>
                        <div class="controls col-sm-5">						 
                            <div class="input-append success date">
                                <%= f.text_field :due_date, class: 'form-control'%>
                                <span class="add-on"><span class="arrow"></span><i class="fa fa-th"></i></span> 
                            </div>
                        </div>
                     </div>
                     <%= f.hidden_field :status , value: "pending" %>
                     <%= f.hidden_field :company_id , value: @current_company.id %>

			</div>
   		</div> 
        <div class="grid simple">
       	  <div class="grid-title no-border"><h4><strong>Man Power</strong></h4></div>
        	<div class="grid-body no-border">
			  <div class="row toolbar-block">
                <div class="col-md-12">
                    	<div class="toolbar pull-right" id="toolbar_main">
                        	<div class="table-tools-actions">
                            	<%= link_to_add_association f, :recruitment_details, :"data-association-insertion-node" => "tbody", :"data-association-insertion-method" => "append", :class => "btn btn-success" do %>
                                    <span class="fa fa-plus"></span> Add New
                                <% end %>
                            </div>
                        </div>                        
                    </div>
                </div>
            	<table class="table no-more-tables table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Gender</th>
                            <th>Age</th>
                            <th>Experience (Years)</th>
                            <th>Fresh Graduate</th>
                            <th>Skill</th>
                            <th>Organization</th>
                            <th>Position</th>
                        </tr>
                    </thead>
                    <tbody>
                       <%= f.fields_for :recruitment_details do |recruitment_detail| %>
                            <%= render 'recruitment_detail_fields', :f => recruitment_detail %>
                        <% end %> 
                    </tbody>
                </table>
                
                
            </div>
        </div>
        
        <div class="grid simple">
       	  <div class="grid-title no-border"><h4><strong>Note by Requester</strong></h4></div>
        	<div class="grid-body no-border">
            	<%= f.text_area :note, :class => 'col-xs-12', :rows => 5, :placeholder => 'Write Note Here'%>
            </div>
            <div class="form-actions">
                <div class="pull-right">
                  <%= f.submit "Save".html_safe , class: 'btn btn-success btn-cons'%>
                </div>
              </div>
        </div>
    <% end %>   
</div>

<script type="text/javascript">
    $('.input-append.date').datepicker({
        autoclose: true,
        todayHighlight: true
   });

</script>