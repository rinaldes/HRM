<div class="col-md-12">
<div class="row">
<div class="col-md-12">
<section class="panel">
<div class="panel-body toggle-heading">
  <div class="col-md-12">
      <div class="toolbar pull-right" id="toolbar_main">
      <div class="table-tools-actions">
          <%= link_to "<span class='fa fa-plus'></span> Add Goal".html_safe , goal_appraisals_path, remote: true, :class => "btn btn-success"%>
        </div>
    </div>
</div>
<div class="col-md-12">
<table class="table no-more-tables table-striped table-hover" id="goal">
    <thead>
        <tr>
            <th>Goal</th>
            <th>Bobot</th>
        </tr>
    </thead>
    <tbody id='appraisal_goals'>
      	<%= f.fields_for :appraisal_goals do |appraisal_goal| %>
        	<%= render 'appraisal_goal_fields', :f => appraisal_goal %>
        <% end %>
        <tr>
        <th>Total</th>
        <td>
        <%= text_field_tag "total" , '' , class: 'form-control total' , placeholder: 'Total' %>
        </td>
        </tr>
    </tbody>
</table>
</div>
</div>
</section>
</div>
</div>
</div>
</div> <!-- grid-body no-border -->
</div> <!-- grid simple -->
</div> <!-- container-fluid -->