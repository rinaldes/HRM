<div class="container-fluid">
	<ul class="breadcrumb">
        <li><p>YOU ARE HERE</p></li> 
        <li><a href="#" class="active">Appraisal</a></li>
    </ul>
    
    <div class="page-title">	
    	<i class="fa fa-user"></i>
    	<h3>Appraisal - <span class="semi-bold"></span></h3>	
    </div> 

    <div class="grid simple">
	<div class="grid-title no-border"></div>
	<div class="grid-body no-border">
		
		<div class="form-group row edit-field">
            <label class="form-label col-sm-2">Employee Name</label>
            <div class="controls col-sm-3">
            	<%= @appraisal.employee.name %>
            </div>
       	</div>

       	<div class="form-group row edit-field">
            <label class="form-label col-sm-2">Organization</label>
            <div class="controls col-sm-3">				 
                <%= @appraisal.employee.organization.name %>
            </div>
     	</div>

     	<div class="form-group row edit-field">
            <label class="form-label col-sm-2">Evaluator</label>
            <div class="controls col-sm-3">
                <%= @appraisal.evaluator %>
            </div>
     	</div>

     	<div class="form-group row edit-field">
            <label class="form-label col-sm-2">Periode</label>
            <div class="controls col-sm-6 row">	:					 
                <div class="col-xs-3">
                	<div class="radio radio-success">
                        <input id="yes" type="radio" name="optionyes" value="yes" checked="checked" />
                        <label for="yes">Mid Year</label>
                        <input id="no" type="radio" name="optionyes" value="no" />
                        <label for="no">Annual</label>
                      </div>
                </div>
                <div class="col-xs-8">
                	<div class="pull-left input-append success date p-r-10">
                        <%= @appraisal.start_period %> to <%= @appraisal.end_period %>
                    </div>
                </div>
            </div>
     	</div>
    	<div class="col-md-12">
			<div class="row">
	            <div class="col-md-12">
	                <section class="panel">
	                    <div class="panel-body toggle-heading">
	                    	<div class="col-md-12">
		                        <div class="toolbar pull-right" id="toolbar_main">
			                    	<div class="table-tools-actions">
			             
			                        </div>
			                    </div>
			                </div>
			                <div class="col-md-12">
		                    	<table class="table no-more-tables table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>Component</th>
                                            <th>Bobot</th>
                                            <th>Indicator</th>
                                            <th>Archifment</th>
                                            <th>Indicator</th>
                                        </tr>
                                    </thead>
                                    <tbody id='appraisal_components'>
                                        <% @appraisal.appraisal_components.each do |appraisal_component| %>
                                            <tr>
                                                <td>
                                                  <%= appraisal_component.component%>  
                                                </td>

                                                <td>
                                                  <%= appraisal_component.bobot %>
                                                </td>

                                                
                                                <% appraisal_component.appraisal_component_indikators.each_with_index do |indikator, i| %>
                                                    <% if i == 0 %>
                                                        <td>
                                                            <%= indikator.indikator %>
                                                        </td>

                                                        <td>
                                                            <%= indikator.archivement %>
                                                        </td>
                                                        <td>
                                                            <%= indikator.score %>
                                                        </td>
                                                        </tr>
                                                    <% else %>
                                                        <tr>
                                                            <td></td>
                                                            <td></td>
                                                            <td><%= indikator.indikator %></td>
                                                            <td><%= indikator.archivement %></td>
                                                            <td><%= indikator.score %></td>
                                                        </tr>
                                                    <% end %>
                                                <% end %>
                                                
                                        <% end %>
                                    </tbody>
                                      
                                    
                                </table>


		                    </div>
	                    </div>
	                </section>
	            </div>
	        </div>
        </div> <!-- col-md-12 -->
    </div> <!-- grid-body no-border -->
    </div> <!-- grid simple -->
</div> <!-- container-fluid -->
