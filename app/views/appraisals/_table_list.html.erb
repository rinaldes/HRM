<table class="table no-more-tables table-striped table-hover">
    <thead>
        <tr>
            <th>Employee Name</th>
            <th>Organization</th>
            <th>Evaluator</th>
            <th>Periode</th>
            <th>Total Score</th>
        </tr>
    </thead>
    <tbody id='dataTable'>
      <% if appraisals.count > 0 %>
        <% appraisals.each do |appraisal| %>
                <tr class="new-rec" id="data_<%= appraisal.id %>">
                    <td><%=  %></td>
                    <td><%= %></td>
                    <td><%= %></td>
                    <td><%= %></td>
                    <td><%= %></td>
                    <td><%= %></td>
                    <td><%= %></td>
                </tr>
            <% end %>
        <% else %>  
          <tr>
            <td colspan="6" align="center">No appraisal data found!</td>
        </tr>
        <% end %>
    </tbody>
</table>

<div class="row dataTables_wrapper">
  <div class="col-md-12">
      <div class="dataTables_paginate paging_bootstrap pagination">
          <%= pagination_links(appraisals, :params => {:controller => controller_name, :action => action_name, :appraisal => {:name => (params[:appraisal][:name] if params[:user].present?), :ip_address => (params[:appraisal][:ip_address] if params[:user].present?), :port => (params[:appraisal][:port] if params[:user].present?)}}) %>
        </div>
        <% base = (params[:page].present? ? params[:page].to_i-1 : 0)*appraisals.per_page %>
      <% if appraisals_count > 0 %>
          <div class="dataTables_info">Showing <b><%= base+1 %> to <%= base+appraisals.per_page %></b> of <%= @appraisals_count %> entries</div>
      <% end %>
    </div>
</div>