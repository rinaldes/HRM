                                </div>
                            </div>
                         </div><br>

                         <%=
                         if @attend2.present?
                         begin
                             if @attend2 != 0
                                label_tag "Reset Every " + @attend2.to_s + " Month"
                            else
                                label_tag "Reset Every Year"
                            end
                        rescue
