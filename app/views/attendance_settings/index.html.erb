    <script type="text/javascript">


        $(document).ready(function(){
    $('input[type="radio"]').click(function(){
        if($(this).attr("value")=="no"){
            $("#attendance_setting_leave_time2").hide();
        }
        if($(this).attr("value")=="yes"){
            $("#attendance_setting_leave_time2").show();
        }
    });
});



        
        $('[data-addform]').click(function(){
            var $parent = $(this).parent(),
                $field = $(this).prev('.addform'),
                $remove = '<a href="javascipt;"><i class="fa fa-remove"></i></a>';
            
            $field.clone().insertBefore($(this)).find('input').val('');
        });
        $('.addform a').live("click",function(){
            $(this).parent().remove();
        });
        
        $('.action-edit .edit').click(function(){
            $(this).addClass('hide');
            $(this).parents('.controls').find('.action-edit .ok, .action-edit .cancel').removeClass('hide');
            $(this).parents('.controls').find('input').removeAttr('disabled').focus();
            $(this).parents('.controls').addClass('editable-mode')
        });
        $('.action-edit .cancel, .action-edit .ok').click(function(){
            $(this).addClass('hide');
            $(this).parents('.controls').find('.action-edit .ok, .action-edit .cancel').addClass('hide');
            $(this).parents('.controls').find('.action-edit .edit').removeClass('hide');
            $(this).parents('.controls').find('input').attr('disabled',true);
            $(this).parents('.controls').removeClass('editable-mode')
        });
    </script>


<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">HR Setting</h4>
      </div>
      <div class="modal-body">
        <%= form_for @attendance_setting do |t| %>
            <table>
            <tr>
                <td><%= t.label :delay_tolerance %></td>
                <td><%= t.number_field :delay_tolerance2, min: 1, max: 59%></td>
            </tr>
            <tr>
            <td><%= label_tag "Leave Time" %></td>
            <td><%= t.number_field :leave_reset, min: 1 %></td>
          </tr>
            
            <tr>
                <td><%= t.label :leave_time %></td>
                <td><%= radio_button_tag(:leave_time2, "no", checked: true, :onchange => "reset()")  %></td>
                <td><%= label_tag(:every_year, "Every Year") %></td>
            </tr>
            <tr>
                <td></td>
                <td><%= radio_button_tag(:leave_time2, "yes", :onchange => "reset()") %></td>
                <td><%= label_tag(:every, "After") %> Month</td>
                <div class = "show box" style="display:none">
                    <div id="tanggal">
                    <td><%= t.number_field :leave_time2, min: 0, max: 12, :onchange => "reset()" %></td>
                    </div>
                </div>
            </tr>

            <tr>
                <td><%= t.label :appraisal_setting %></td>
                <td><%= t.radio_button(:appraisal_setting, "component", checked: true, :class => "show__field show__field_no")  %></td>
                <td><%= label_tag(:component_and_indicator, "Component And Indicator") %></td>
            </tr>
            <tr>
                <td></td>
                <td><%= t.radio_button(:appraisal_setting, "goal_and_value", checked: true, :class => "show__field show__field_no")  %></td>
                <td><%= label_tag(:goal_and_value, "Goal And Value") %></td>
            </tr>
        </table>
      </div>
      <div class="modal-footer">
        <%= submit_tag "Save", :class => "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
