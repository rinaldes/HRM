<div class="container-fluid">
  <ul class="breadcrumb">
    <li><p>YOU ARE HERE</p></li> 
    <li><a href="#" class="active">Approval Employee</a></li>
  </ul>
  <div class="page-title">
    <i class="fa fa-user"></i>
    <h3><span class="semi-bold">Approval Employee</span></h3> 
  </div>
  <div class="grid simple">
    <div class="grid-title no-border"></div>
    <div class="grid-body no-border">
      <div class="row toolbar-block">
        <div class="col-md-4">
          <div class="dataTables_filter" id="example3_filter">
            <div class="controls">
              <div class="input-group">
                <%= text_field_tag :search, '', class: 'form-control search', placeholder: 'Search Record' %>
                <span class="input-group-addon ">
                  <i class="fa fa-search"></i>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
      <table class="table no-more-tables table-striped table-hover" id="employee_list">
        <thead>
          <tr>
            <th style="width:15%">Nik</th>
            <th style="width:20%">Name</th>
            <th style="width:15%">Status</th>
            <th colspan="2"  style="width:20%;">Action</th>
          </tr>
        </thead>
        <tbody><%= render 'employees' %></tbody>
      </table>
      <div class="row dataTables_wrapper"><%= render 'layouts/paging', records: @employees, records_count: @employees_count %></div>
    </div>
  </div>
</div><!-- Modal -->
<div aria-hidden="true" aria-labelledby="myModalLabel" employee="dialog" tabindex="-1" id="myModal" class="modal fade">
  <%= render 'new' if @employee.present? && action_name == "create" %>
  <%= render 'edit' if @employee.present? && action_name == "update" %>
</div><!-- modal -->