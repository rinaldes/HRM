<%= javascript_tag render(:template => 'components/jsManager.js', :formats => [:js]) %>
<div class="container-fluid">
	<ul class="breadcrumb">
        <li><p>YOU ARE HERE</p></li> 
        <li><a href="#" class="active">Component</a></li>
    </ul>
    
    <div class="page-title">	
    	<i class="fa fa-user"></i>
    	<h3>Component</span></h3>	
    </div>  
    <div class="grid simple">
   	  <div class="grid-title no-border"></div>
    	<div class="grid-body no-border">
			<div class="row toolbar-block">
            	<div class="col-md-4">
                	<div class="dataTables_filter" id="example3_filter">
                    	<div class="controls">
                            <div class="input-group">
                              <input id="filter" type="text" class="form-control" placeholder="Search Record">
                              <span class="input-group-addon ">
                               	<i class="fa fa-search"></i>
                              </span>
                            </div>
                          </div>
                    </div>
                </div>
                <div class="col-md-8">
                	<div class="toolbar pull-right" id="toolbar_main">
                    	<div class="table-tools-actions">
                            <%= button_to new_component_path, :method => 'get', :class => 'btn btn-success', :remote => true do %>
                                <span class="fa fa-plus"></span> Add New
                            <% end %>
                        </div>
                    </div>
                    <div class="toolbar pull-right" id="toolbar_main">                      
                        <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">Tools <i class="fa fa-angle-down"></i>
                        </button>
                        <ul class="dropdown-menu pull-right">
                            <li><%= link_to "Export to CSV",  components_path(format: "csv") %></li>
                            <li><%= link_to "Export to Excel", components_path(format: "xls") %></li>
                            <li data-toggle="modal" data-target="#uploadModal"><a>Import from CSV</a></li>
                        </ul>
                    </div>
                	<div class="toolbar pull-right" id="toolbar_def">
                        <div class="table-tools-actions">
                            <button class="btn" id="button_edit" onclick="edit_component()">
                                <span class="fa fa-edit"></span> Edit
                            </button> 
                            <button class="btn" data-toggle="modal" data-target="#confirm_modal">
                                <span class="fa fa-trash"></span> Remove
                            </button> 
                            <div class="separator">&nbsp;</div>
                        </div>
                    </div>
                </div>
            </div>
        	 <%= render 'index' %>
        </div>
    </div>
</div>

<!-- Modal Area -->

<div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
  <%= render 'new' if action_name == "create" %>
  <%= render 'edit' if action_name == "update" %>
</div>

<!-- Modal Upload -->
<div class="modal fade" id="uploadModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Import Components</h4>
      </div>
      <%= form_tag import_components_path, multipart: true do %>
        <div class="modal-body">
            <%= file_field_tag :file %>
        </div>
        <div class="modal-footer">
          <%= link_to "Download Template", components_path(format: "csv", :a => "a"), :class => "btn btn-success" %>
          <%= submit_tag "Import", :class => "btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Modal Remove -->
<div class="modal fade" id="confirm_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <br>
          <i class="fa fa-trash-o fa-7x"></i>
          <h4 id="myModalLabel" class="semi-bold">Are you sure want to remove this item(s)</h4>
          <br>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="delete_component();">Yes</button>
        </div>
      </div>
    </div>
</div>